doctype html
html lang="he"
  head
    meta charset="utf-8"
    meta http-equiv="X-UA-Compatible" content="IE=edge"
    title Big Window
    css:
      * {
        -moz-box-sizing: border-box;
        box-sizing: border-box;
      }

      p {
        display: none;
      }

      .wrap {
        height: 216px;
        width: 100%;
        direction: rtl;
        position: absolute;
        bottom: 0;
        left: 0;
        overflow: hidden;
      }

      .backdrop {
        width: 1215px;
        height: 216px;
        padding: 0.2em 1.1em 0;
        background: -webkit-linear-gradient(left, rgba(201, 191, 177, 0.6) 0%, rgba(201, 191, 177, 0.9) 15%, rgba(201, 191, 177, 0.9) 85%, rgba(201, 191, 177, 0.6) 100%);
        background: linear-gradient(left, rgba(201, 191, 177, 0.6) 0%, rgba(201, 191, 177, 0.9) 15%, rgba(201, 191, 177, 0.9) 85%, rgba(201, 191, 177, 0.6) 100%);
        color: black;
        text-shadow: 0 0 1px rgba(0, 0, 0, 0.5);
        font-family: Arial, sans-serif;
        font-size: 40px;
        line-height: 48px;
        box-shadow: inset 0 0 40px rgba(0, 0, 0, 0.4);
      }
      h3 {
        margin: 0 0 0 1em;
        line-height: 1em;
        font-size: 1.4em;
        text-align: center;
      }

